<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/txtTenUngDung"
        android:layout_width="127dp"
        android:layout_height="135dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="69dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin người dùng"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/txtHo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ: "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/txtTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="140dp" />

    <EditText
        android:id="@+id/etxtHo"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="96dp" />

    <EditText
        android:id="@+id/etxtEmail"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="223dp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:text="Email:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="223dp" />

    <EditText
        android:id="@+id/etxtSDT"
        android:layout_width="296dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="281dp" />

    <TextView
        android:id="@+id/txtSDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SĐT:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="280dp" />

    <RadioButton
        android:id="@+id/rdbKhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="381dp" />

    <RadioButton
        android:id="@+id/rdbNu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nữ"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="381dp" />

    <RadioButton
        android:id="@+id/rdbNam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nam"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="381dp" />

    <CheckBox
        android:id="@+id/cbDieuKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đồng ý với các điều khoản dịch vụ"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="449dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="513dp" />

    <EditText
        android:id="@+id/etxtTen"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/txtGioitinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="335dp" />
</androidx.constraintlayout.widget.ConstraintLayout>